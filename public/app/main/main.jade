


button.btn.btn-primary(ng-click="testCall()") Test

.panel.panel-default
    .panel-heading
        h2
            strong Table
    .pull-right
        form.form-inline
            .form-group
                input.form-control(ng-model="searchText", placeholder="Filter")
            .form-group.margin-left-med
                select.form-control(ng-model="sortOrder", ng-options="item.value as item.text for item in sortOptions")
    .panel-body
            table.table.table-hover.table-condesed
                thead
                    tr
                        th.sorting(ng-click="sort_by('startTime')") StartTime
                        th.sorting(ng-click="sort_by('duration')") Duration
                        th.sorting(ng-click="sort_by('inOut')") Direction
                        th.sorting(ng-click="sort_by('aNumber')") Calling Number
                        th Called Number
                        th Agent
                        th Service
                tbody
                    tr(ng-repeat="call in customfiltered = (calls| filter:searchText) | startFrom:(bigCurrentPage-1)*itemsPerPage | limitTo:itemsPerPage",ng-click="get(call.filename)",class="{{selected}}")
                        td {{call.startTime | date:'yyyy-MM-dd HH:mm:ss'}}
                        td {{call.duration}}
                        td {{call.inOut}}
                        td {{call.aNumber}}
                        td {{call.bNumber}}
                        td {{call.username}}
                        td {{call.service}}

        pagination(total-items="customfiltered.length",items-per-page="itemsPerPage", page="bigCurrentPage", max-size="maxSize", class="pagination-sm", boundary-links="true", rotate="false", num-pages="numPages")

