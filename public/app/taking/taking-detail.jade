.row
    .col-md-6
        .panel.panel-default
            .panel-heading
                h2
                    strong Table
            .panel-body
            form.form-horizontal(name="editUserForm")
                table.table

                    tbody
                        tr
                            td Võtab peale
                            td
                                strong {{username}}


                        tr
                            td Väljumine
                            td {{startTime | date:'yyyy-MM-dd HH:mm:ss'}}
                        tr
                            td A suund
                            td {{aDirection}}
                        tr
                            td B suund
                            td {{bDirection}}
                        tr
                            td Vabukohti
                            td {{seatPlace}} /{{registredPassengers.length}}
                        tr
                            td nimed
                            td
                                p(ng-repeat="pass in registredPassengers") {{pass.name }}  {{pass.date | date:'yyyy-MM-dd HH:mm:ss'}}


                        tr
                            td Lisainfo
                            td {{info}}
                        tr
                            td Lisa
                            td
                                textarea.form-control(name="extra", type="text", placeholder="Lisa", ng-model="extra")
                        tr
                            td
                            td
                                button.btn.btn-primary(ng-click="update(taking)", ng-disabled="editUserForm.$invalid") Kinnita
                                | &nbsp;
                                a.btn.btn-default(href="/") Katkesta

