.row
    .login-box
        .header Sisesta mail
        form.form-horizontal.login(name="loginForm")
            .form-group
                .controls.row
                    .input-group.col-sm-12
                        input.form-control(type="email", id="email", placeholder="email", ng-model="email", required)
                        span.input-group-addon
                            i.fa.fa-envelope

            .row
                p
                    a.btn.btn-lg.btn-primary.col-xs-12(ng-click="send()",ng-disabled="loginForm.$invalid") Saada
            .row
                p
                    a.btn.btn-lg.btn-default.col-xs-12(href="/login") Katkesta

