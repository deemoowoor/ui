.row
    .col-md-6
        .panel.panel-default
            .panel-heading
                h2
                    strong Registreerimis
                    h2 Vorm
            .panel-body
                form.form-horizontal(name="userForm")
                    .form-group
                        label.col-md-3.control-label(for="username") Kasutajanimi
                        .col-md-9
                            input.form-control(name="username", type="text", placeholder="Kasutajanimi", ng-model="username", required)
                    .form-group
                        label.col-md-3.control-label(for="fname") Eesnimi
                        .col-md-9
                            input.form-control(name="fname", type="text", placeholder="Eesnimi", ng-model="fname", required)
                    .form-group
                        label.col-md-3.control-label(for="lname") Perekonnanimi
                        .col-md-9
                            input.form-control(name="lname", type="text", placeholder="Perekonnanimi", ng-model="lname", required)

                    .form-group
                        label.col-md-3.control-label(for="email") Email
                        .col-md-9
                            input.form-control(name="email", type="email", placeholder="Email", ng-model="email", required)
                    form-group
                        label.col-md-3.control-label(for="mobile") Mobiil

                        .col-md-9
                            input.form-control(name="mobile", type="text", placeholder="Mobiil telefon", ng-model="mobile", required)
                            small.help-block on avalik ainult kasutajale kellega koos sõidate, või siis kui lisate ise kuulutusse

                    .form-group
                        label.col-md-3.control-label(for="password") Parool
                        .col-md-9
                            input.form-control(name="password", type="password", placeholder="Parool", ng-model="password", required)

                    .form-group
                        .col-md-9.col-md-offset-3
                            .pull-right
                                button.btn.btn-primary(ng-click="signup()", ng-disabled="userForm.$invalid") Registreeru
                                | &nbsp;
                                a.btn.btn-default(href="/users") Katkesta