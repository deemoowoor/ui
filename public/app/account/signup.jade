.row
    .col-md-6
        .panel.panel-default
            .panel-heading
                h2
                    strong Registreerimis
                    h2 Vorm
            .panel-body
                form.form-horizontal(name="userForm")
                    .form-group
                        label.col-md-3.control-label(for="username") Username
                        .col-md-9
                            input.form-control(name="username", type="username", placeholder="Username", ng-model="username", required)

                    .form-group
                        label.col-md-3.control-label(for="email") Email
                        .col-md-9
                            input.form-control(name="email", type="email", placeholder="Email", ng-model="email", required)
                    .form-group
                        label.col-md-3.control-label(for="password") Password
                        .col-md-9
                            input.form-control(name="password", type="password", placeholder="Password", ng-model="password", required)
                    .form-group
                        label.col-md-3.control-label(for="fname") First Name
                        .col-md-9
                            input.form-control(name="fname", type="text", placeholder="First Name", ng-model="fname", required)
                    .form-group
                        label.col-md-3.control-label(for="lname") Last Name
                        .col-md-9
                            input.form-control(name="lname", type="text", placeholder="Last Name", ng-model="lname", required)

                    .form-group
                        .col-md-9.col-md-offset-3
                            .pull-right
                                button.btn.btn-primary(ng-click="signup()", ng-disabled="userForm.$invalid") Submit
                                | &nbsp;
                                a.btn.btn-default(href="/users") Cancel