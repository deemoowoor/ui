extends ../includes/layout
block main-content
    <!-- start: Header -->
    .navbar.navbar-default.navbar-fixed-top(role="navigation")
        .container-fluid
            .navbar-header
                button.navbar-toggle(type="button", data-toggle="collapse", data-target=".sidebar-collapse")
                    span.sr-only Toggle navigation
                    span.icon-bar a
                    span.icon-bar
                    span.icon-bar
                a.navbar-brand(href="/")
                    h2 peale.ee

            ul.nav.navbar-nav.navbar-actions.navbar-left(ng-show="identity.isAuthenticated()")
                li
                    a(href="/#", id="main-menu-toggle")
                        i.fa.fa-bars
            ul.nav.navbar-nav.navbar-actions.navbar-left
            ul.nav.navbar-nav.navbar-right(ng-include="'/partials/account/loginbar'")


    <!-- end: Header -->
    .container-fluid.content
        .row
            <!-- start: Main Menu -->
            .sidebar.col-md-2.col-sm-1(ng-show="identity.isAuthenticated()")
                .nav-sidebar.title
                    span  Valikud
                ul.nav.nav-sidebar(ng-controller="NavigationCtrl")
                    li(ng-show="identity.isAuthenticated()")
                        a(href="/", ng-class="{ active: isActive('/') }")
                            i.fa.fa-align-justify
                            span.hidden-sm.text Pealeht
                    li(ng-show="identity.isAuthenticated()")
                        a.dropmenu(href="/#")
                            i.fa.fa-edit
                            span.hidden-sm.text Toimingud
                            span.chevron.closed
                        ul
                            li
                                a.submenu(href="/taking", ng-class="{ active: isActive('/taking') }")
                                    i.fa.fa-users
                                    span.hidden-sm.text Võtan peale
                            li
                                a.submenu(href="/wish", ng-class="{ active: isActive('/wish') }")
                                    i.fa.fa-user
                                    span.hidden-sm.text Soovin peale
                            //li
                                a.submenu(href="/groups", ng-class="{ active: isActive('/groups') }")
                                    i.fa.fa-users
                                    span.hidden-sm.text Soovin saata
                    li(ng-show="identity.currentUser.isAdmin()")
                        a.dropmenu(href="/#")
                            i.fa.fa-edit
                            span.hidden-sm.text User
                            span.chevron.closed
                        ul
                            li
                                a.submenu(href="/users", ng-class="{ active: isActive('/users') }")
                                    i.fa.fa-user
                                    span.hidden-sm.text Users
                            li
                                a.submenu(href="/roles", ng-class="{ active: isActive('/roles') }")
                                    i.fa.fa-shield
                                    span.hidden-sm.text Roles
                            li
                                a.submenu(href="/groups", ng-class="{ active: isActive('/groups') }")
                                    i.fa.fa-users
                                    span.hidden-sm.text Groups


                a.full.visible-md.visible-lg(href="/#", id="main-menu-min")
                    i.fa.fa-angle-double-left
            <!-- end: Main Menu -->
            <!-- start: Content -->
            .col-sm-11.main(ng-class="identity.isAuthenticated() ? 'col-md-10' : 'col-md-12'")
                .row.tere
                    div(ng-view)
    footer
        .row
            .col-sm-5
               span © 2014 telpro
            .col-sm-6.text-right
                span Kontakt info@peale.ee

